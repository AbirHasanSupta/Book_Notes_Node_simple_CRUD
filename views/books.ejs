<%- include("partials/header.ejs") %>
    <div class="row gx-0 justify-content-center align-items-center vh-100">
        <div class="col-lg-6">
            <img class="img-fluid" src="<%= image %>" alt="..." />
            <div class="caption">
                <div class="caption-content">
                    <h2>Edit Details </h2>
                    <form method="post" action="/editbook/" class="book-form">
                        <input type="hidden" name="id" value="<%= id %>">
                        <input type="text" class="btn btn-dark btn-xl" placeholder= "Edit Title" value="<%= title %>" name="bookname" autofocus required>
                        <textarea id="reviewInput" class="btn btn-dark btn-xl" name="review"placeholder="Enter your review" required><%= review %></textarea><br>
                        <textarea id="reviewInput" class="btn btn-dark btn-xl" name="image" placeholder="Enter your image url" required><%= image %></textarea><br>
                        <input type="range" id="ratingInput" name="rating" min="0" max="5" step="0.1" value="<% rating %>" required><br>
                        <output for="ratingInput" id="ratingOutput">Rating</output>
                        <input type="submit" value="Submit" class="btn btn-primary btn-xl"></form>
                </div>
            </div>
            <form method="post" action="/delete/<%= id %>">
                <input type="submit" value="Delete" class="btn btn-danger btn-xl"> 
                </form>
        </div>
    </div>
<%- include("partials/footer.ejs") %>